@model Diploma_project.ViewModels.ResetPasswordViewModel
@Html.ValidationSummary(true)
@Styles.Render("~/Content/ValidCreate.css")

@{
    ViewBag.Title = "Сброс пароля";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { style = "min-height: 35em;" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Email)
    @Html.HiddenFor(m => m.Code)
    @Html.AntiForgeryToken();
    <h4 class="mt-4">Создание пароля</h4>
    <div class="form-row">
        <div class="mt-3 form-group col-md-12">
            @Html.LabelFor(m => m.Password, "Пароль:", new { @class = "mb-2" })
            @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control w-50", placeholder = "Введите пароль" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.PasswordConfirm, "Подтвердите пароль:", new { @class = "mb-2" })
            @Html.TextBoxFor(m => m.PasswordConfirm, new { type = "password", @class = "form-control w-50" })
            @Html.ValidationMessageFor(m => m.PasswordConfirm)
        </div>
        <div class="form-group col-md-12">
            <input type="submit" class="btn btn-primary" value="Сохранить" />
        </div>
    </div>
}