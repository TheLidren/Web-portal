@model Diploma_project.ViewModels.ChangeRoleViewModel
@Styles.Render("~/Content/ValidCreate.css")
<div class="modal-content">
    <div class="modal-header">
        <p class="h4 fw-normal">Назначение роли для @Model.UserEmail</p>
        @Html.ActionLink("Х", "ListUser", "Home")
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("EditRole", "Account", new { userId = Model.UserId}, FormMethod.Post , new { @class = "form-floating col-11" }))
        {
            Html.AntiForgeryToken();
            foreach (var role in Model.AllRoles)
            {
                <div title="@role.Description">
                    <input type="checkbox" name="roles" value="@role.Name"
                           @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                </div>
            }
            <button type="submit" class="mt-3 btn btn-primary">Сохранить</button>
        }
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript" src="~/Scripts/index.js"></script>
}
