@model Diploma_project.Models.ContactInformation
@Html.ValidationSummary(true)
@Styles.Render("~/Content/ValidCreate.css")

@{
    ViewBag.Title = "Добавить контакт";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

@using (Html.BeginForm("AddContact", "Company", FormMethod.Post, new { style = "min-height: 35em;" }))
{
    <div class="form-row">
        <div class="mt-3 ml-3 form-group col-md-6">
            @Html.LabelFor(m => m.Surname, "Фамилия:", new { @class = "mb-2" })
            @Html.TextBoxFor(m => m.Surname, new { type = "text", @class = "form-control", placeholder = "Введите фамилию" })
            @Html.ValidationMessageFor(m => m.Surname)
        </div>
        <div class="ml-3 form-group col-md-6">
            @Html.LabelFor(m => m.Name, "Имя:", new { @class = "mb-2" })
            @Html.TextBoxFor(m => m.Name, new { type = "text", @class = "form-control", placeholder = "Введите имя" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="ml-3 form-group col-md-6">
            @Html.LabelFor(m => m.Patronymic, "Отчество:", new { @class = "mb-2" })
            @Html.TextBoxFor(m => m.Patronymic, new { type = "text", @class = "form-control", placeholder = "Введите отчество" })
            @Html.ValidationMessageFor(m => m.Patronymic)
        </div>
        <div class="ml-3 form-group col-md-6">
            @Html.LabelFor(m => m.PhoneNumber, "Номер телефона:", new { @class = "mb-2" })
            @Html.TextBoxFor(m => m.PhoneNumber, new { type = "text", @class = "form-control", placeholder = "Введите номер телефона РБ" })
            @Html.ValidationMessageFor(m => m.PhoneNumber)
        </div>
        <div class="ml-3 form-group col-md-6">
            @Html.LabelFor(m => m.PositionId, "Должность:", new { @class = "mb-2" })
            @Html.DropDownListFor(model => model.PositionId, (SelectList)ViewBag.positions, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PositionId)
        </div>
        <div class="form-group col-md-6">
            <input type="submit" class="ml-3 btn btn-primary" value="Добавить" />
        </div>
    </div>
}